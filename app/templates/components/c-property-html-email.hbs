<table class="copy-to-clipboard-html-table"
  style="width: 100%; text-align: left; color: #243039; -webkit-box-sizing: inherit; box-sizing: inherit;font: 12px/18px Helvetica, Arial, Verdana, sans-serif;">
  <tbody>
    <td style="width: 350px; padding: 0.78571429em 0.78571429em;">
      <img src="{{property.img}}" width="250px">
    </td>
    <td style="padding: 0.78571429em 0.78571429em;">
      <div style="font-size: 28px; font-family: 'Playfair Display',cursive; line-height: 47px;">
        {{property.title}}
      </div>
      <div style="font-size: 16px; color: #7F8E9A;">
        {{property.locality.name}}
        {{separator}}{{property.rooms}}
        {{separator}}Interiér {{property.interior}} m²
        {{#if property.terrace}}
          {{separator}}Balkon {{property.terrace}} m²
        {{/if}}
        {{#if property.terrace2}}
          {{separator}}Terasa {{property.terrace2}} m²
        {{/if}}
        {{#if property.garden}};
          {{separator}}Zahrada {{property.garden}} m²
        {{/if}}
      </div>
      <div style="font-size: 20px; font-weight: bold; letter-spacing: 0.22px; line-height: 34px;">
        {{#if property.priceVisible}}
          Cena {{price property.price}}
        {{else}}
          Cena na vyžádání
        {{/if}}
      </div>
    </td>

  </tbody>
</table>
