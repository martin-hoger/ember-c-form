{{#if label}}
  <label>{{label}}</label>
{{/if}}

<select onChange={{action "selectChanged" value="target.value"}} disabled={{if disabled "disabled" ""}}>
  {{#each options as |item|}}
    <option
        value={{item.id}}
        selected={{eq (convert-to-string item.id) (convert-to-string (get model field))}}
    >
      {{item.value}}
    </option>
  {{/each}}
</select>

{{#if description}}
  <div class="description">{{description}}</div>
{{/if}}

{{#if error}}
  <div class="error-message">
      {{error}}
  </div>
{{/if}}

