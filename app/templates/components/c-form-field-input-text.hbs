{{#if label}}
  <label>{{label}}</label>
{{/if}}

{{input type=type value=(mut (get model field)) disabled=(if disabled "disabled" "")}}

{{#if unit}}
  <div class="unit">{{unit}}</div>
{{/if}}

{{#if suffixIcon}}
  <i class="{{suffixIcon}} icon suffix-icon" {{action suffixIconAction}}></i>
{{/if}}

{{#if hasBlock}}
  {{yield}}
{{/if}}

{{#if description}}
  <div class="description">{{description}}</div>
{{/if}}

{{#if error}}
  <div class="error-message">
      {{error}}
  </div>
{{/if}}
