{{#if label}}
  <label>{{label}}</label>
{{/if}}

<div class="two fields">
  <div class="field">
    <button class="button-yes ui {{if checkedYes "green" ""}} icon button" {{action "buttonClick" ""}}><i class="check icon"></i></button>
    <button class="button-no ui {{if checkedNo "red" ""}} icon button" {{action "buttonClick" -1}}><i class="close icon"></i></button>
  </div>

  {{#if checkedYes}}
    {{!-- it must be class "field" in the yield --}}
    {{yield}}
  {{/if}}
</div>

{{#if error}}
  <div class="error-message">
    {{error}}
  </div>
{{/if}}
