{{!-- here is the text area: --}}
{{yield}}

{{c-form-button
  icon="folder open"
  click=(action (toggle "listOpen" this))
  label="Load"
}}

{{c-form-button
  icon="save"
  click=(action "save")
  label="Save"
  disabled=saveDisabled
}}

{{!-- List of templates. Open / close the list (and other functions) --}}
{{#if listOpen}}
  <div class="template-box-content">
    {{#if templates.length}}

      {{input placeholder="search template" value=searchTemplate}}
      {{!-- Filtered templates: --}}
      {{#each rowsFiltered as |template|}}
        <div class="row" onclick={{action (action "applyTemplate" template)}}>
          <span class="text">{{template}} </span>
          <i class="delete-icon trash icon" {{action (action "deleteTemplate" template)}}></i>
        </div>
      {{/each}}

      <div class="help">
        Help: Press Ctrl key to append the text at the end of the current text.
      </div>

    {{else}}
      No templates
    {{/if}}
  </div>
{{/if}}
