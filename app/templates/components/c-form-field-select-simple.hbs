{{#c-form-field-select
  label=label
  model=this
  field="selectSimpleDummyValue"
  multiple=multiple
  disabled=disabled
  searchField=searchField
  allowClear=allowClear
  verticalPosition=verticalPosition
  dropdownClass=dropdownClass
  placeholder=placeholder
  closeOnSelect=closeOnSelect
  description=description
  onSelect=(action "onSelect")
  selected=selected
  error=error
  required=required
  class=class
  options=options
  as |item|
}}
    {{#if hasBlock}}
      {{yield item}}
    {{else}}
      {{get item selectValue}}
    {{/if}}
{{/c-form-field-select}}
