<label>
  {{fieldComponent.label}}
  {{#if fieldComponent.required}}
     <span class="required">*</span>
  {{/if}}
  {{#if (and fieldComponent.showAudit (has-role "admin-users" "audit-see-small-audit-labels"))}}
    <label class="field-audit-label ui mini label orange" {{action (toggle "openAudit" this)}}>Audit</label>
  {{/if}}
</label>
{{#if openAudit}}
  {{#c-partial-overlay visible=openAudit onClose=(toggle "openAudit" this)}}
    {{c-form-audit model=fieldComponent.model field=fieldComponent.field label=fieldComponent.label}}
  {{/c-partial-overlay}}
{{/if}}
